{
  "name": "react-yuki",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "build": "tsc -b packages/ui packages/icons",
    "test": "lerna run test",
    "clean": "rimraf packages/**/lib",
    "lint:ts": "tslint 'packages/**/*.ts{,x}'",
    "lint:ts:fix": "tslint 'packages/**/*.ts{,x}' --fix",
    "lint:style": "stylelint 'packages/**/*.ts?(x)'",
    "lint:style:fix": "stylelint 'packages/**/*.ts?(x)' --fix"
  },
  "devDependencies": {
    "@babel/core": "^7.3.4",
    "@babel/preset-env": "^7.3.4",
    "@babel/preset-react": "^7.0.0",
    "@types/jest": "^24.0.15",
    "@types/react": "^16.8.7",
    "@types/react-dom": "^16.8.2",
    "@types/react-test-renderer": "^16.8.1",
    "babel-jest": "^24.8.0",
    "babel-loader": "^8.0.5",
    "husky": "^2.3.0",
    "jest": "^24.8.0",
    "jest-styled-components": "^6.3.3",
    "lerna": "^3.15.0",
    "prettier": "^1.16.4",
    "react": "^16.8.4",
    "react-dom": "^16.8.4",
    "react-test-renderer": "^16.8.6",
    "rimraf": "^2.6.3",
    "stylelint": "^10.0.1",
    "stylelint-config-idiomatic-order": "^7.0.0",
    "stylelint-config-recommended": "^2.2.0",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-processor-styled-components": "^1.7.0",
    "ts-jest": "^24.0.0",
    "tslint": "^5.13.1",
    "tslint-config-airbnb": "^5.11.1",
    "tslint-config-prettier": "^1.18.0",
    "tslint-loader": "^3.5.4",
    "tslint-plugin-prettier": "^2.0.1",
    "tslint-react": "^3.6.0",
    "typescript": "^3.5.2"
  },
  "jest": {
    "resetMocks": true,
    "resetModules": true,
    "verbose": true,
    "browser": true,
    "collectCoverage": true,
    "transform": {
      "^.+\\.(js|jsx)$": "babel-jest",
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "setupFilesAfterEnv": [
      "jest-styled-components"
    ],
    "coverageReporters": [
      "html",
      "lcov"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    },
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/lib/"
    ],
    "testMatch": [
      "<rootDir>/packages/*/tests/**/*.test.(ts|tsx|js)"
    ]
  },
  "author": "Asher Nguyen <phucnguyenhoang1985@gmail.com>",
  "license": "MIT"
}
