{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint",
      "stylelint",
      "git add"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-lerna-changelog"
    }
  },
  "scripts": {
    "commit": "git-cz",
    "bootstrap": "lerna bootstrap",
    "build": "tsc -b packages/ui packages/icons packages/hooks",
    "prerelease": "yarn lint && yarn clean && yarn build",
    "release": "cd packages/*/lib && lerna publish",
    "test": "jest --coverage --detectOpenHandles",
    "clean": "rimraf packages/**/lib && rimraf packages/**/tsconfig.tsbuildinfo",
    "lint:ts": "eslint 'packages/**/*.ts{,x}'",
    "lint:ts:fix": "eslint 'packages/**/*.ts{,x}' --fix",
    "lint:style": "stylelint 'packages/**/*.ts?(x)'",
    "lint:style:fix": "stylelint 'packages/**/*.ts?(x)' --fix",
    "lint": "yarn lint:ts && yarn lint:style"
  },
  "devDependencies": {
    "@babel/core": "^7.5.5",
    "@babel/preset-env": "^7.5.5",
    "@babel/preset-react": "^7.0.0",
    "@babel/preset-typescript": "^7.3.3",
    "@types/enzyme": "^3.10.3",
    "@types/enzyme-adapter-react-16": "^1.0.5",
    "@types/jest": "^24.0.17",
    "@types/react": "^16.9.2",
    "@types/react-dom": "^16.8.5",
    "@types/react-test-renderer": "^16.9.0",
    "@typescript-eslint/eslint-plugin": "^2.0.0",
    "@typescript-eslint/parser": "^2.0.0",
    "babel-jest": "^24.9.0",
    "babel-loader": "^8.0.5",
    "commitizen": "^4.0.3",
    "cz-lerna-changelog": "^2.0.0",
    "enzyme": "^3.10.0",
    "enzyme-adapter-react-16": "^1.14.0",
    "enzyme-to-json": "^3.4.0",
    "eslint": "^6.2.0",
    "eslint-config-prettier": "^6.0.0",
    "eslint-config-react": "^1.1.7",
    "eslint-import-resolver-typescript": "^1.1.1",
    "eslint-plugin-import": "^2.18.0",
    "eslint-plugin-jest": "^22.15.1",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-react": "^7.14.2",
    "eslint-plugin-react-hooks": "^1.7.0",
    "husky": "^3.0.4",
    "jest": "^24.9.0",
    "jest-styled-components": "^6.3.3",
    "lerna": "^3.16.4",
    "lint-staged": "^9.2.3",
    "prettier": "^1.16.4",
    "react": "^16.9.0",
    "react-dom": "^16.9.0",
    "react-test-renderer": "^16.9.0",
    "rimraf": "^3.0.0",
    "stylelint": "^10.0.1",
    "stylelint-config-idiomatic-order": "^7.0.3",
    "stylelint-config-recommended": "^2.2.0",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-processor-styled-components": "^1.7.0",
    "ts-jest": "^24.0.0",
    "typescript": "^3.5.3"
  },
  "author": "Asher Nguyen <phucnguyenhoang1985@gmail.com>",
  "license": "MIT"
}
